{
  "manifest_version": 2,
  "name": "Canvas",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "pencil-16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "pencil-16.png",
    "48": "pencil-48.png",
    "128": "pencil-128.png"
  }
}
